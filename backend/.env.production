# Production Environment Configuration
DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this-immediately

# Database Configuration
DATABASE_URL=postgresql://irrigation_user:secure_password@localhost/irrigation_db

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=True

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-notifications@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Static Files (for production)
STATIC_URL=/static/
STATIC_ROOT=/var/www/irrigation/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/irrigation/media/

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Logging
LOGGING_LEVEL=INFO
LOG_FILE=/var/log/irrigation/django.log

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0

# Time Zone
TIME_ZONE=UTC
